
<div class="accordion form-horizontal" id="accordion">
    <div class="accordion-group">
        <div class="accordion-heading">
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapseTarget">
                <div id="spSection" class="collapse-bar">
                    <span class="ui-icon ui-icon-triangle-1-e" style="float:left"></span>
                    <span class="highlight"><span class="glyphicon glyphicon-ok-sign"></span> Client Management<span ng-show="Status.EditFieldForm" style="float:right"> {{Status.SubTitle}}</span></span>
                </div>
            </a>
        </div>
        <br />
        <div id="ClientSection" class="accordion-body collapse in">
            <div class="row">
                <table class="table table-striped table-bordered table-condensed" ng-model="Template.existing">
                    <thead class="modal-header">
                        <tr>
                            <th>ID</th>
                            <th>Client Name</th>
                            <th>Access Failed Count</th>
                            <th>Lockout Enabled</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="f in Client.existing | orderBy:'Id'">
                            <td>{{f.Id}}</td>
                            <td>
                                {{f.UserName}}
                            </td>
                            <td>
                                {{f.AccessFailedCount}}
                            </td>
                            <td>
                                <input type="checkbox" disabled="disabled" ng-model="f.LockoutEnabled" />
                            </td>
                            <td>
                                <button type="button" class="btn btn-primary" ng-click="Edit(f.Id)"
                                        title="Edit User" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </button>
                                <button type="button" class="btn btn-danger" ng-click="Remove(f.Id)"
                                        title="Remove from system" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </button>
                            </td>
                        </tr>

                        <tr ng-show="Status.NewForm">
                            <td>
                                <input type="text" class="form-control" placeholder="--ID--" ng-model="Client.new.Id" 
                                       title="Client ID" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')" />
                                <span class="has-error" style="color:red">{{Status.ClientId}}</span>
                            </td>
                            <td>
                                <input type="text" class="form-control" placeholder="--User Name--" ng-model="Client.new.UserName"
                                       title="Client Name" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')" />
                                <span class="has-error" style="color:red">{{Status.UserName}}</span>
                            </td>
                            <td>
                                <input type="text" class="form-control" placeholder="--Failed Count--" ng-model="Client.new.AccessFailedCount"
                                       title="Failed Count" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')" />
                                <span class="has-error" style="color:red">{{Status.AccessFailedCount}}</span>
                            </td>
                            <td>
                                <input type="checkbox" ng-model="Client.new.LockoutEnabled" 
                                       title="Lockout Enabled" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')"
                                       />
                            </td>
                            <td>
                                <button ng-click="New()" class="btn btn-primary"
                                        title="New User" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')">
                                    <span class="glyphicon glyphicon-plus-sign"></span>
                                </button>
                                <button ng-click="CancelAdd()" class="btn btn-default"
                                        title="Cancel Add"
                                        data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')">
                                    <span class="glyphicon glyphicon-ban-circle"></span>
                                </button>
                            </td>
                        </tr>
                        <tr ng-show="Status.EditForm">
                            <td>
                                <input type="text" class="form-control" disabled ng-model="Client.selected.Id" />
                            </td>
                            <td>
                                <input type="text" class="form-control" placeholder="--User Name--" ng-model="Client.selected.UserName"
                                       title="Client Name" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')" />
                                <span class="has-error" style="color:red">{{Status.UserName}}</span>
                            </td>
                            <td>
                                <input type="text" class="form-control" placeholder="--Failed Count--" ng-model="Client.selected.AccessFailedCount"
                                       title="Failed Count" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')" />
                                <span class="has-error" style="color:red">{{Status.AccessFailedCount}}</span>
                            </td>
                            <td>
                                <input type="checkbox" ng-model="Client.selected.LockoutEnabled"
                                       title="Lockout Enabled" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')" />
                            </td>
                            <td>
                                <button ng-click="Update()" class="btn btn-primary"
                                        title="Update User" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')">
                                    <span class="glyphicon glyphicon-refresh"></span>
                                </button>
                                <button ng-click="CancelEdit()" class="btn btn-default"
                                        title="Cancel Edit"
                                        data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')">
                                    <span class="glyphicon glyphicon-ban-circle"></span>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <button type="button" ng-click="ShowNewForm()" class="btn btn-primary" 
                        ng-disabled="Status.NewForm" 
                        title="New User" data-toggle="tooltip" data-placement="top" onmouseenter="$(this).tooltip('show')">
                <span class="glyphicon glyphicon-plus"></span> New User</button>
            </div>
        </div>
    </div>
</div>


